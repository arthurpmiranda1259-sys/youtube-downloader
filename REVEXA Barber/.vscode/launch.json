{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend (Hot Reload)",
            "request": "launch",
            "type": "dart",
            "program": "backend/bin/server.dart",
            "cwd": "backend",
            "console": "terminal"
        },
        {
            "name": "Flutter App (Mobile)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--web-renderer",
                "html"
            ]
        },
        {
            "name": "Flutter Web (Chrome)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "chrome",
                "--web-renderer",
                "html"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Full Stack (Backend + Mobile)",
            "configurations": ["Backend (Hot Reload)", "Flutter App (Mobile)"]
        },
        {
            "name": "Full Stack (Backend + Web)",
            "configurations": ["Backend (Hot Reload)", "Flutter Web (Chrome)"]
        }
    ]
}